borders($style,$color,$size)
	position: relative
	&::after
		display: block
		position: absolute
		left: 0
		bottom: 0
		width: 100%
		border-top: $color $style $size
		content: ''

media-backimage($url,$format)
	background-image: url($url + '@2x.' +$format)
	@media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
		background-image: url($url + '@3x.' +$format)