.car-decrease,.car-add
	font-size: 24px
	
.car-decrease
	background-color: white
	color: #00a0dc	
	
.car-add
	background-color: white
	color: #00a0dc
	
.count
	margin-left: 2px
	margin-right: 2px
	color: #00a0dc
	font-size: 16px
	line-height: 24px
	vertical-align: top

.slide-fade-enter-active
	transition: all .3s ease

.slide-fade-leave-active
	transition: all .3s cubic-bezier(1.0, 0.5, 0.8, 1.0)
	
.slide-fade-enter, .slide-fade-leave-to
	opacity: 0
