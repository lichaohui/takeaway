.main
	display: flex
	position: absolute
	top: 168px
	bottom: 46px
	width: 100%
	overflow: hidden

.side-nav
	flex: 0 0 80px
	width: 80px
	background-color: #f3f5f7

.cur
	background-color: white

.goods-wrapper
	flex: auto
	
.side-navbar-item
	padding-left: 20px
	padding-top: 14px
	padding-bottom: 14px
	padding-right: 6px
	width: 54px
	line-height: 18px
	background-size: 16px 16px
	background-repeat: no-repeat
	background-position: 2px 16px
	border-bottom: solid 1px white
	cursor: pointer
	&.decrease
		media-backimage('/static/image/good/decrease_4','png')
	&.discount
		media-backimage('/static/image/good/discount_4','png')
	&.guarantee
		media-backimage('/static/image/good/guarantee_4','png')
	&.invoice
		media-backimage('/static/image/good/invoice_4','png')
	&.special
		media-backimage('/static/image/good/special_4','png')	

.good-name
	height: 26px
	line-height: 26px
	text-indent: 12px
	background-color: #f3f5f7
	border-left: #ccc solid 1px
	
.food
	margin-left: 18px
	margin-right: 18px
	display: flex
	border-bottom: solid 1px #ccc
	padding-top: 18px
	padding-bottom: 18px
	&:last-child
		border-bottom: none
	
.food-icon
	flex: 0 0 57px
	width: 57px
	cursor: pointer
	
.food-detail
	flex: auto
	margin-left: 10px
	position: relative
	
.food-name
	font-size: 14px
	line-height: 22px
	cursor: pointer

.food-description,.food-info
	color: #aaa
	
.food-info
 dt,dd
	line-height: 20px 
	display: inline-block
	
.price
	color: #f54100

.old-price
	text-decoration: line-through
	color: #aaa
	
.carcontrol.good-tpl
	position: absolute
	right: 0
	bottom: 0
	z-index: 3

.ball
	width: 14px
	height: 14px
	background-color: #f01414
	display: block
	position: absolute
	bottom: 6px
	right: 5px
	border-radius: 100%
	z-index: 2
	
.food-link
	display: block